



<div class = "row row-2 row-heading text-center">
	<div class="col-md-3 col-side">
	  		<%= render(:partial => '/projects/sidenavigation') %>
	</div>


	<div class="col-md-8">
		
		<div class ="row text-center">
			
			
			<div class="col-md-9 col-title">
				<h1>PO List for <%=@project.project_name%></h1>
			</div>
			<div class="col-md-3">
				<br><%=link_to('Change Project', {:controller => 'projects' ,:action => 'index'})%></a>
				<br><%=link_to('Create PO', {:controller => 'master_pos' ,:action => 'new'})%></a>
			</div>
		</div>
		
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<h2><%= flash[:notice]%></h2>
			</div>
		<%end%>
			
		<div class ="row row-2 text-center">
		  <table class="table table-bordered text-center" summary="Tasks List">
			<tr class="header">
				<th>PO ID</th>
				<th>Vendor ID</th>
				<th>Line Items</th>
				<th>Delivery Date</th>
				<th>Details</th>
				
			</tr>
				<% @pos.each do |po|%>
			<tr>
				<td><%=po.po_id%></td>
				<td><%=po.company_id%></td>
				<td>Line item count</td>
				<td>Delivery Date</td>
				<td><%=link_to("Show", {:action => 'show', :id => po.id}, :class => 'action show')%></td>
			</tr>	
			<% end %>
			</table>
		</div>

	<div class="col-md-1 col-side">
	</div>

	</div>

</div>