	<% if !flash[:notice].blank? %>
		<div class="notice">
				<h3><%= flash[:notice]%></h3>
		</div>
	<% end%>
	
	
		
	<div class='row row-1'>
		<%=render(:partial => 'landing/banner')%>
	</div>
	
	<div class="row row-2 text-center">
	  	
		<div class="col-md-3">
	  	</div>
		
		
	  	<div class="col-md-6">
		
			
			<h2>Create new Account</h2>
			<form>
  	  		  <%= form_for(:user, :url => {:action => 'create'}) do |f| %>
    				<table summary="Subject form fields">
						<tr>
							<th class='form-header'>First Name</th>
							<td><%= f.text_field(:first_name)%></td>
      					</tr>
						<tr>
							<th class='form-header'>Last Name</th>
							<td><%= f.text_field(:last_name)%></td>
      					</tr>
						<tr>
							<th class='form-header'>Username</th>
							<td><%= f.text_field(:user_name)%></td>
      					</tr>
						<tr>
							<th class='form-header'>E-mail</th>
							<td><%= f.text_field(:email)%></td>
      					</tr>
						<tr>
							<th class='form-header'>Company Name</th>
							<td><%= f.text_field(:company_name)%></td>
						</tr>
						<tr>
							<th class='form-header'>Created At</th>
							<td><%= f.date_select :created_date%></td>
						</tr>
					</table>
						<%=submit_tag("Create User")%>
					<% end %>
				</div>
			</form>
	  	</div>
		
		
		
	  	<div class="col-md-3">
	  	</div>
			
			
		</div>