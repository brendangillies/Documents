<p id="notice"><%= notice %></p>

<p>
<strong>Document for Approval:</strong>
<%= @approval_doc.name %>
</p>

<p>
	<strong>Embed document here</strong>
</p>

<h2>Comments</h2>
	<% @approval_doc.approval_comments.each do |comment|%>
<p>
	<strong>Commenter:</strong>
	<%= comment.user %>
</p>
<p>
	<strong>Comment:</strong>
	<%= comment.body %>
</p>
<% end %>

<h2>Add a Comment:</h2>
<%= form_for([@approval_doc, @approval_doc.approval_comments.build]) do |f| %>
<p>
	<%= f.label :user_id %><br/>
	<%= f.text_field :user_id %><br/>
</p>
<p>
	<%= f.label :body %><br/>
	<%= f.text_area :body %><br/>
</p>
<p>
 <%= f.submit %>
</p>
<% end %>

<%= link_to 'Edit', edit_approval_doc_path(@approval_doc) %>
<%= link_to 'Back', approval_docs_path %>
